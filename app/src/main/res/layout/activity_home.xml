<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    tools:context="com.example.derek.customizablealarmclock.Home"
    tools:layout_editor_absoluteY="81dp">

    <TimePicker
        android:id="@+id/DisplayCurrentTime"
        android:layout_width="0dp"
        android:layout_height="364dp"
        android:layout_marginBottom="8dp"
        android:clickable="false"
        android:longClickable="false"
        android:numbersSelectorColor="@android:color/background_light"
        android:numbersInnerTextColor="@android:color/black"
        android:numbersBackgroundColor="@drawable/gradient"
        android:amPmBackgroundColor="@color/colorPrimary"
        android:amPmTextColor="@android:color/black"
        android:numbersTextColor="@android:color/black"
        android:headerBackground="@color/colorPrimary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/PressToContinue"
        android:layout_width="234dp"
        android:layout_height="97dp"
        android:layout_marginBottom="192dp"
        android:layout_marginTop="8dp"
        android:text="@string/PressToContinue"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.992" />

</android.support.constraint.ConstraintLayout>


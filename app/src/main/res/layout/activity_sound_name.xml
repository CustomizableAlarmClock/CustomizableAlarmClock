<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.derek.customizablealarmclock.SoundName"
    tools:layout_editor_absoluteY="89dp">

    <EditText
        android:id="@+id/editTextChangeSoundName"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="326dp"
        android:layout_marginEnd="50dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="382dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="@string/editTextChangeSoundName"
        app:layout_constraintBottom_toTopOf="@+id/ButtonSaveSoundName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/ButtonSaveSoundName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginStart="497dp"
        android:onClick="setSoundName"
        android:text="@string/ButtonSaveSoundName"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextChangeSoundName"
        android:layout_marginLeft="497dp" />
</android.support.constraint.ConstraintLayout>
